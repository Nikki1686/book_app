<!DOCTYPE html>
<html lang="en">
<%- include('../../layout/head') %>

<body>
  <%- include('../../layout/header') %>
  <section id="subheader">
    <h2>Search Results</h2>
  </section>
  <main>
    <ul>
      <% books.forEach(book => { %>
        <li>
          <img src=<%=book.image %>>
          <h3><%= book.title %></h3>
          <p><em><%= book.author %></em></p>
          <p><%= book.description %></p>
          <button class="select-book">Select this Book</button>
        </li>
        <section class="add-form detail">
          <form action="/" method="post">
            <input name="title" class="text-input" type="text" name="search"  value="<%= book.title %>" required>
            <input name="author" class="text-input" type="text" name="search"  value="<%= book.author %>" required>
            <input name="isbn" class="text-input" type="text" name="search"  value="<%= book.isbn %>"" required>
            <input name="image-url" class="text-input" type="text" name="search" value="<%= book.image %>" required>
            <textarea name="details" class="text-input" cols="30" rows="10" required><%= book.description %></textarea>
            <input name="bookshelf" class="text-input" type="text" name="search" placeholder="Enter bookshelf name" required>
            <button id="add-form-submit" type="submit">Add to Database</button>
          </form>
        </section>
      <% }) %>
    </ul>
  </main>


  <%- include('../../layout/footer') %>

  <script
  src="https://code.jquery.com/jquery-3.3.1.min.js"
  integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
  crossorigin="anonymous"></script>
  <script src="js/app.js"></script>
</body>
</html>