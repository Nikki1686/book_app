<!DOCTYPE html>
<html lang="en">
<%- include('../../layout/head') %>

<body>
  <div class="wrapper">
    <%- include('../../layout/header') %>
  
    <%- include('../../layout/subheader', {
      message: 'Search Results',
      index: false
    }) %>
  
    <main>
      <% books.forEach(book => { %>
        <%- include('../books/detail', {book: book}) %>
        <%- include('../books/edit', {book: book}) %>
      <% }) %>
    </main>

    <!-- This empty div is a CSS trick to keep the footer sticky at the bottom -->
    <div class="push"></div>
  </div>

  <%- include('../../layout/footer') %>
</body>
</html>